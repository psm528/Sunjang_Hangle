<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mainmenubg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="matrix"
        android:src="@drawable/imgmainmenubg" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp"
        android:id="@+id/waveScroll1"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/mainwave1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:scaleType="center"
            android:src="@drawable/imgstartwave1" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="60dp"
        android:id="@+id/waveScroll2"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/mainwave2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:scaleType="center"
            android:src="@drawable/imgstartwave2" />
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/mainstudyship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="50dp"
        android:src="@drawable/imgmainmenustudyship" />

    <ImageView
        android:id="@+id/maintestship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="30dp"
        android:src="@drawable/imgmainmenutestship" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:id="@+id/waveScroll3"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/mainwave3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:scaleType="center"
            android:src="@drawable/imgstartwave3" />
    </HorizontalScrollView>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:id="@+id/waveScroll4"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/mainwave4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:scaleType="center"
            android:src="@drawable/imgstartwave4" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:id="@+id/waveScroll5"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/mainwave5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:scaleType="center"
            android:src="@drawable/imgstartwave5" />
    </HorizontalScrollView>


    <ImageButton
        android:id="@+id/mainstudybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="180dp"
        android:background="#00000000"
        android:onClick="onStudyBtnClick"
        android:src="@drawable/imgmainmenustudy" />

    <ImageButton
        android:id="@+id/maintestbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="60dp"
        android:background="#00000000"
        android:src="@drawable/imgmainmenutest" />

    <ImageButton
        android:id="@+id/mainshopbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:background="#00000000"
        android:src="@drawable/imgmainmenushop" />

    <ImageButton
        android:id="@+id/mainoptionbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:src="@drawable/imgmainmenuoption" />

</FrameLayout>
