<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/imgstudyvocabg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/imgstudyvocaboard" />

    <ImageButton
        android:id="@+id/vocaleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/imgstudyvocaleft"
        android:background="#00000000"
        android:onClick="onFlagClick"/>

    <ImageButton
        android:id="@+id/vocaright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/imgstudyvocaright"
        android:background="#00000000"
        android:onClick="onFlagClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="3dp"
        android:src="@drawable/imgstudyvocawoman" />

    <TextView
        android:id="@+id/studypagenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="95dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/imgstudyquesnum"
        android:gravity="center"
        android:text="1/25"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/vocaimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="110dp"
        android:src="@drawable/imgnoun1day1" />

    <TextView
        android:id="@+id/vocaEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="105dp"
        android:gravity="center"
        android:text="one-piece"
        android:textColor="#0000FF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/vocaHan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:text="원피스"
        android:textColor="#FF0000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/vocapron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="90dp"
        android:text="[wonpiseu]"
        android:textColor="#000000"
        android:textSize="27sp" />

    <ImageButton
        android:id="@+id/vocaSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:background="#00000000"
        android:src="@drawable/imgstudyvocabigspeaker"
        android:onClick="onSpeakerClick"/>

    <ImageView
        android:id="@+id/examplekorimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:src="@drawable/imgstudyvocakor" />

    <ImageView
        android:id="@+id/exampleengimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:src="@drawable/imgstudyvocaeng" />

    <TextView
        android:id="@+id/examplekortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:text="none"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="30dp"
        android:maxWidth="400dp"/>

    <TextView
        android:id="@+id/exampleprontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:text="none"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:maxWidth="400dp"/>

    <TextView
        android:id="@+id/exampleengtext"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center|left"
        android:text="none"
        android:textColor="#0000FF"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:maxWidth="400dp"/>

</FrameLayout>